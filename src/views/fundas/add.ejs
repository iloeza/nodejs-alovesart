<%- include('../partials/_header.ejs'); %>
<div class="container pt-5">
    <h2 class="text-center">Agregar nueva funda</h2>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-4">
            <form action="/fundas/added" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nMarca">Marca de telefono</label>
                    <input type="text" class="form-control" id="nMarca" name="idMarca" required autofocus>
                </div>
                <div class="form-group">
                    <label for="nModelo">Modelo</label>
                    <input type="text" class="form-control" id="nModelo" name="Modelo" required>
                </div>
                <div class="form-group">
                    <label for="nDescripcion">Descripci√≥n</label>
                    <input type="text" class="form-control" id="nDescripcion" name="Descripcion" required>
                </div>
                <div class="form-group">
                    <label for="nStock">Stock</label>
                    <input type="number" class="form-control" id="nStock" name="Stock" required>
                </div>
                <div class="form-group">
                    <label for="nImagen">Imagen</label>
                    <input type="file" class="form-control-file" id="nImagen" name="Imagen" required>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-success btn-block">Guardar</button>
                    </div>
                    <div class="col-6">
                        <a href="/admin">
                            <button type="button" class="btn btn-danger btn-block">Regresar</button>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/_footer.ejs'); %>